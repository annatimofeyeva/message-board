{{#if addNewAnswer}}
<h1>Add answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Name</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="image">Gravatar Image URL</label>
        {{input value=image id="image"}}
      </div>
      <div class="form-group">
        <label for="content">Answer content</label>
        {{input value=rating id="rating"}}
      </div>

      <button class="btn btn-primary btn-lg" {{action 'saveAnswer'}}>Submit</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary btn-lg" {{action 'answerFormShow'}}>Add Answer</button>
{{/if}}
