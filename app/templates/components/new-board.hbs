{{#if addNewBoard}}
<div class="well">
  <h1>Ask Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Name</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="heading">Headline</label>
        {{input value=heading id="heading"}}
      </div>

      <div class="form-group">
        <label for="content">Question Content</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="tag">Tags</label>
        {{input value=tag id="yag"}}
      </div>

      <div class="form-group">
        <label for="image">Gravatar Image URL</label>
        {{input value=image id="image"}}
      </div>

      <button class="btn btn-primary btn-lg" {{action 'saveBoard1'}}>Submit</button>
    </form>
  </div>
</div>
{{else}}
<br>
<button class="btn btn-primary btn-lg" {{action 'boardFormShow'}}>Ask Question</button>
{{/if}}
